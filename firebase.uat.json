{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "build": {
      "env": {
        "NEXT_PUBLIC_BACKEND_URL": "https://uat-api.dailychexly.com",
        "NEXTAUTH_URL": "https://uat.dailychexly.com",
        "GOOGLE_CLIENT_ID": "${secret:UAT-Google-SSO-ID}",
        "GOOGLE_CLIENT_SECRET": "${secret:DailyChexly-GoogleSSO-Secret-UAT}"
      }
    },
    "frameworksBackend": {
      "region": "europe-west1"
    }
  }
}
