} from '@/lib/invite-utils';
import { toast } from '@/hooks/use-toast';
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
} from '@/components/ui/dialog';
import { Button } from '@/components/ui/button';
import { Checkbox } from '@/components/ui/checkbox';
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from '@/components/ui/select';
import { Label } from '@/components/ui/label';
import { Input } from '@/components/ui/input';

interface ShareChecklistModalProps {
  checklistId: number;
  checklistName: string;
  isOpen: boolean;
  onClose: () => void;
}

type ExpiryOption = 'never' | '1day' | '7days' | '30days';

export function ShareChecklistModal({
  checklistId,
  checklistName,
  isOpen,
  onClose,
}: ShareChecklistModalProps) {
  const [selectedExpiry, setSelectedExpiry] = useState<ExpiryOption>('7days');
  const [isSingleUse, setIsSingleUse] = useState(true);
  const [inviteName, setInviteName] = useState('');

  // Fetch invites
  const {
    data: invites = [],
    mutate: refreshInvites,
    isLoading,
  } = useGetChecklistInvites(checklistId, {
    swr: { enabled: isOpen },
  });

  // Create invite mutation
  const { trigger: createInvite, isMutating: isCreating } =
    useCreateChecklistInvite(checklistId);

  const displayInvites: InviteDisplayData[] = invites.map(mapInviteToDisplay);

  const handleGenerateLink = async () => {
    const expiryMap: Record<ExpiryOption, number | null> = {
      never: null,
      '1day': 24,
      '7days': 168,
      '30days': 720,
    };

    try {
      const result = await createInvite({
        name: inviteName.trim() || null,
        expiresInHours: expiryMap[selectedExpiry],
        isSingleUse,
      });

      if (result?.inviteUrl) {
        const success = await copyToClipboard(result.inviteUrl);
        if (success) {
          toast({
            title: 'Invite link copied!',
            description: 'The invite link has been copied to your clipboard.',
          });
        } else {
          toast({
            title: 'Link generated',
            description: result.inviteUrl,
            variant: 'default',
          });
        }

        // Refresh the invite list
        await refreshInvites();

        // Reset form
        setInviteName('');
        setIsSingleUse(true);
        setSelectedExpiry('7days');
      }
    } catch (error: any) {
      toast({
        title: 'Failed to generate invite',
        description: error?.message || 'Something went wrong',
        variant: 'destructive',
      });
    }
  };

  const handleCopyLink = async (url: string) => {
    const success = await copyToClipboard(url);
    if (success) {
      toast({
        title: 'Link copied!',
      });
    } else {
      toast({
        title: 'Copy failed',
        description: 'Please copy the link manually',
        variant: 'destructive',
      });
    }
  };

  const handleShare = async (url: string, inviteName?: string | null) => {
    // Check if Web Share API is available (mobile and modern browsers)
    if (navigator.share) {
      try {
        await navigator.share({
          title: `Join checklist: ${checklistName}`,
          text: inviteName 
            ? `${inviteName} - Join my checklist on DailyChexly!`
            : `Join my checklist "${checklistName}" on DailyChexly!`,
          url: url,
        });
        toast({
          title: 'Shared successfully!',
        });
      } catch (error: any) {
        // User cancelled or error occurred
        if (error.name !== 'AbortError') {
          console.error('Share failed:', error);
          // Fallback to copy
          await handleCopyLink(url);
        }
      }
    } else {
      // Fallback to copy for desktop
      await handleCopyLink(url);
    }
  };

  const handleRevoke = async (inviteId: number) => {
    if (!confirm('Are you sure you want to revoke this invite link? Anyone with this link will no longer be able to use it.')) {
      return;
    }

    try {
      const { trigger: revokeInvite } = useRevokeChecklistInvite(inviteId);
      await revokeInvite(undefined, {
        onSuccess: async () => {
          toast({
            title: 'Invite revoked',
          });
          await refreshInvites();
        },
      });
    } catch (error: any) {
      toast({
        title: 'Failed to revoke invite',
        description: error?.message || 'Something went wrong',
        variant: 'destructive',
      });
    }
  };

  return (
    <Dialog open={isOpen} onOpenChange={onClose}>
      <DialogContent className="max-h-[95vh] sm:max-h-[90vh] flex flex-col gap-0 p-0">
        <div className="flex-1 overflow-y-auto">
          <div className="p-4 sm:p-6 border-b sticky top-0 bg-background z-10">
            <DialogHeader>
              <DialogTitle className="text-base sm:text-lg">Share &quot;{checklistName}&quot;</DialogTitle>
              <DialogDescription className="text-xs sm:text-sm">
                Create invite links to share this checklist with others
              </DialogDescription>
            </DialogHeader>
          </div>

          <div className="space-y-6 p-4 sm:p-6">
          {/* Create New Invite Section */}
          <div className="border rounded-lg p-3 sm:p-4 space-y-4">
            <h3 className="font-semibold text-sm sm:text-base">Create New Invite Link</h3>

            <div className="space-y-2">
              <Label htmlFor="invite-name" className="text-sm">Name (optional)</Label>
              <Input
                id="invite-name"
                type="text"
                placeholder="e.g., For John, Team members"
                value={inviteName}
                onChange={(e) => setInviteName(e.target.value)}
                maxLength={100}
                className="text-sm"
              />
              <p className="text-xs text-muted-foreground">
                Give this invite a friendly name to help you remember who it&apos;s for
              </p>
            </div>

            <div className="flex items-center space-x-2">
              <Checkbox
                id="single-use"
                checked={isSingleUse}
                onCheckedChange={(checked) => setIsSingleUse(!!checked)}
              />
              <Label htmlFor="single-use" className="cursor-pointer text-sm">
                Single use only
              </Label>
            </div>

            <div className="space-y-2">
              <Label htmlFor="expiry" className="text-sm">Expires in</Label>
              <Select value={selectedExpiry} onValueChange={(value) => setSelectedExpiry(value as ExpiryOption)}>
                <SelectTrigger id="expiry" className="text-sm">
                  <SelectValue />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="never">Never</SelectItem>
                  <SelectItem value="1day">1 day</SelectItem>
                  <SelectItem value="7days">7 days</SelectItem>
                  <SelectItem value="30days">30 days</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <Button onClick={handleGenerateLink} disabled={isCreating} className="w-full text-sm">
              {isCreating ? 'Generating...' : 'Generate Invite Link'}
            </Button>
          </div>

          {/* Active Invites Section */}
          <div className="space-y-4">
            <h3 className="font-semibold text-sm sm:text-base">
              Active Invites ({displayInvites.length})
            </h3>

            {isLoading ? (
              <div className="text-center py-4 text-muted-foreground text-sm">
                Loading invites...
              </div>
            ) : displayInvites.length === 0 ? (
              <div className="text-center py-8 text-muted-foreground text-sm">
                No active invites. Generate a link to share this checklist.
              </div>
            ) : (
              <div className="space-y-3">
                {displayInvites.map((invite) => {
                  const inviteData = invites.find(i => i.id === invite.id);
                  return (
                  <div
                    key={invite.id}
                    className="border rounded-lg p-3 sm:p-4 space-y-3"
                  >
                    <div className="space-y-2">
                      {inviteData?.name && (
                        <div className="font-medium text-sm sm:text-base">
                          {inviteData.name}
                        </div>
                      )}
                      <div className="flex items-center gap-2">
                        <span className="text-lg shrink-0">ðŸ”—</span>
                        <code
                          className="flex-1 truncate text-xs bg-muted px-2 py-1 rounded min-w-0"
                          title={invite.url}
                        >
                          {truncateUrl(invite.url, 40)}
                        </code>
                      </div>
                    </div>

                    <div className="flex flex-wrap items-center gap-1 sm:gap-2 text-xs text-muted-foreground">
                      <span>{invite.expiryLabel}</span>
                      <span>â€¢</span>
                      <span>{invite.isSingleUse ? 'Single use' : 'Reusable'}</span>
                      {invite.claimedAt && (
                        <>
                          <span>â€¢</span>
                          <span className="break-all">
                            Claimed {invite.claimedAt.toLocaleDateString()}
                          </span>
                        </>
                      )}
                    </div>

                    <div className="flex flex-wrap gap-2">
                      {invite.status === 'active' && (
                        <>
                          <Button
                            size="sm"
                            variant="default"
                            onClick={() => handleShare(invite.url, inviteData?.name)}
                            className="text-xs sm:text-sm"
                          >
                            ðŸ“¤ Share
                          </Button>
                          <Button
                            size="sm"
                            variant="outline"
                            onClick={() => handleCopyLink(invite.url)}
                            className="text-xs sm:text-sm"
                          >
                            Copy Link
                          </Button>
                        </>
                      )}
                      <Button
                        size="sm"
                        variant="destructive"
                        onClick={() => handleRevoke(invite.id)}
                        className="text-xs sm:text-sm"
                      >
                        Revoke
                      </Button>
                    </div>
                  </div>
                );})}
              </div>
            )}
          </div>

          <div className="flex justify-end p-4 sm:p-6 border-t bg-background">
            <Button variant="outline" onClick={onClose} className="text-sm">
              Close
            </Button>
          </div>
        </div>
      </DialogContent>
    </Dialog>
  );
}
