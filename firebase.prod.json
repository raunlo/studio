{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "build": {
      "env": {
        "NEXT_PUBLIC_BACKEND_URL": "https://api.dailychexly.com",
        "NEXTAUTH_URL": "https://dailychexly.com",
        "GOOGLE_CLIENT_ID": "${secret:GOOGLE_CLIENT_ID_PROD}",
        "GOOGLE_CLIENT_SECRET": "${secret:GOOGLE_CLIENT_SECRET_PROD}"
      }
    },
    "frameworksBackend": {
      "region": "europe-west1"
    }
  }
}
